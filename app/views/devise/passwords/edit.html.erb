<h2><%= t('.change_your_password', default: 'Change your password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="row">
    <div class="six columns field">
      <%= f.label :password, t('.new_password', default: 'New password') %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'u-full-width' %>
    </div>
  </div>

  <div class="row">
    <div class="six columns field">
      <%= f.label :password_confirmation, t('.confirm_new_password', default: 'Confirm new password') %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'u-full-width' %>
    </div>
  </div>

    <%= f.submit t('.change_my_password', default: 'Change my password') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
