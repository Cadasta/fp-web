<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="six columns field">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true, class: 'u-full-width' %>
    </div>
  </div>

  <div class="row">
    <div class="six columns field">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'u-full-width' %>
    </div>
  </div>

  <div class="row">
    <div class="six columns field">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'u-full-width' %>
    </div>
  </div>

  <div class="row">
    <div class="six columns field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'u-full-width' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
